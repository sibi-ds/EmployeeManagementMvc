<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ideas2it.employeemanagement.employee.model.Employee" table="employee">
        <id name="id" column="employee_id" type="int">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="string" />
        <property name="dateOfBirth" column="date_of_birth" type="date" />
        <property name="salary" column="salary" type="float" />
        <property name="mobileNumber" column="mobile_number" type="string" />
        <property name="isDeleted" column="is_deleted" type="boolean" />
		
        <bag name="addresses" table="address" cascade="save-update" lazy="false" >
            <key column="employee_id"/>
            <one-to-many class="com.ideas2it.employeemanagement.employee.model.Address" />
        </bag>
		
        <bag name="projects" table="employee_project" cascade="save-update" lazy="true">
            <key column="employee_id"/>
            <many-to-many class="com.ideas2it.employeemanagement.project.model.Project" column="project_id" />
        </bag>
		
    </class> 
</hibernate-mapping>